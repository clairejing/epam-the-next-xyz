<link href="css/dashboard.css" rel="stylesheet">
<h2>Dashboard</h2>
<div id="stuff">
	<h4>Welcome <em>{{username}}</em></h4>

	{{#each stuff}}
	<p>{{ greeting }} {{ subject }}</p>
	{{/each}}

	<hr>

	<button id="addNewArticle" class="btn btn-inverse btn-lg">Add New Article</button>
  <form id="newArticle" action="/articles" method="post">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="title" id="title"></input>
      </div>
      <br>
      <div class="form-group">
          <label for="date">Date</label>
          <input class="form-control"type='date' name="date" id="date"></input>
      </div>
      <br>
      <div class="form-group">
       <label for="image">Image</label>
          <input class="form-control"type='url' name="image" id="image"></input>
      </div>
      <br>
      <div class="form-group">
       <label for="summary">Summary</label>
          <textarea class="form-control" name="summary" rows="10" cols="50" id="summary"></textarea>
      </div>
      <button type="submit" class="btn btn-inverse btn-lg">Submit</button>
  </form>
</div><br>

